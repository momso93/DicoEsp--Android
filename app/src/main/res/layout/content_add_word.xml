<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:context="com.rygelouv.dicoesp.interfaces.activities.AddWordActivity"
    tools:showIn="@layout/activity_add_word"
    android:padding="@dimen/dimen_10"
    android:gravity="bottom"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/wolof_word_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="2sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/wolof_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="Mot en wolof"
                android:padding="@dimen/dimen_10"
                android:textSize="15sp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/wolof_word_def_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wolof_word_card"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="2sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/wolof_word_desc"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_75"
                android:layout_margin="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="Definition wolof"
                android:padding="@dimen/dimen_10"
                android:textSize="15sp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/french_word_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wolof_word_def_card_desc"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="2sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/french_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="Mot en FranÃ§ais"
                android:padding="@dimen/dimen_10"
                android:textSize="15sp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/french_word_def_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/french_word_card"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="2sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/french_word_desc"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_75"
                android:layout_margin="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="Definition francaise"
                android:padding="@dimen/dimen_10"
                android:textSize="15sp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/english_word_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/french_word_def_card_desc"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="2sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/english_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="Mot en Anglais"
                android:padding="@dimen/dimen_10"
                android:textSize="15sp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/english_word_def_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/english_word_card"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        app:cardCornerRadius="2sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/english_word_desc"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_75"
                android:layout_margin="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="Definition Anglaise"
                android:padding="@dimen/dimen_10"
                android:textSize="15sp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/validate_form"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_50"
        android:background="@drawable/button_border_green_bg_blue"
        android:padding="@dimen/dimen_5"
        android:text="VALIDER"
        android:textColor="@android:color/white"
        android:layout_below="@+id/english_word_def_card_desc"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
